<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corner_all"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/FingerPrint_ivFinger"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_fp_40px"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/FingerPrint_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请验证指纹解锁"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/FingerPrint_ivFinger"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/FingerPrint_tvErrorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:textColor="@color/colorDeepOrange1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/FingerPrint_tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/FingerPrint_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGrayF2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/FingerPrint_tvErrorInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/FingerPrint_tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="@color/colorBlackWithAlpha1"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/FingerPrint_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



</android.support.constraint.ConstraintLayout>